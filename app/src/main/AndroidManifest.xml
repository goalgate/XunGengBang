<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xungengbang">

    <!-- 在sd卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:name=".AppInit"
        android:allowBackup="true"
        android:icon="@drawable/this_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/this_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.WJM_Activity.LoginActivity"
            android:launchMode="singleInstance">
        </activity>

        <activity android:name=".Activity.WJM_Activity.MainActivity"
            android:launchMode="singleTop">
        </activity>

        <activity android:name=".Activity.ZJ_Activity.LoginActivity"
            android:launchMode="singleInstance"></activity>

        <activity android:name=".Activity.ZJ_Activity.MainActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".Activity.TestActivity"
            android:launchMode="singleTop">
        </activity>
    </application>

</manifest>